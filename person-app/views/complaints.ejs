<tr>
<th> Submitter </th>
<th> Content </th>
<th> Target </th>
<th> Status </th>
</tr>

<% complaints.forEach((complaint)=>{ %>
	<%if (complaint.target != "admin@adr.com") {%>
		<%if (complaint.status != "Approved" && complaint.status != "Denied") {%>
